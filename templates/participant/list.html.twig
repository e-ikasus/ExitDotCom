{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Liste Participant {% endblock %}

{% block body %}
    <h1>Gestion Participants</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Campus</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Actif</th>
            <th>Admin</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for i in 0..participants|length-1 %}
            <tr class="liste-participant table-{% if i is even %}info{% else %}secondary{% endif %}" onclick="document.location.href='{{ path('participant_edit', {'id': participants[i].id}) }}'">
                <td>{{ participants[i].pseudo }}</td>
                <td>{{ participants[i].nom }}</td>
                <td>{{ participants[i].prenom }}</td>
                <td>{{ participants[i].campus.nom }}</td>
                <td>{{ participants[i].telephone }}</td>
                <td>{{ participants[i].email }}</td>
                <td>{{ participants[i].actif ? 'x' : ' ' }}</td>
                <td>{{ participants[i].administrateur ? 'x' : ' ' }}</td>
                <td class="testtest d-flex">{{ include ('participant/_delete_form.html.twig', {'participant' : participants[i]}) }}
                    <a class="btn btn-sm btn-warning" href="{{ path('participant_edit', {'id': participants[i].id}) }}">Editer</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
