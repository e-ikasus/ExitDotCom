        </tr>

        {% if is_granted ('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ participant.pseudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ participant.password }}</td>
            </tr>
            <tr>
                <th>Administrateur</th>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
            </tr>

            <a href="{{ path('participant_list') }}">back to list</a>

            <a href="{{ path('participant_edit', {'pseudo': participant.pseudo}) }}">edit</a>

            {{ include('participant/_delete_form.html.twig') }}
        {% endif %}

        </tbody>
    </table>

    {% if app.user.id == participant.id %}

        <a class="btn btn-warning" href="{{ path('participant_edit', {'pseudo': participant.pseudo}) }}">Modifier</a>

    {% endif %}

