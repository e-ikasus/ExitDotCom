{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sortie index{% endblock %}

{% block body %}

    <div>
        <p>Date du jour : {{ 'now' | date('d-m-Y') }}</p>
        <p>Participant : {{ app.user.prenom }} {{ app.user.nom }}</p>
    </div>

    <div>
        <h2>Filtrer les sorties</h2>
        <div>
            <input type="select" id="search-campus">
            <label for="search-campus">Campus</label>

            <input type="search">
            <label for="search-nom-sortie">Le nom de la sortie contient :</label>

            <span>Entre <input type="date"> et <input type="date"></span>
        </div>
        <div>
            <input type="checkbox" id="sorties-organisateur">
            <label for="sorties-organisateur">Sorties dont je suis l'organisateur/trice</label>

            <input type="checkbox" id="sorties-non-inscrit">
            <label for="sorties-non-inscrit">Sorties auxquelles je suis inscrit/e</label>

            <input type="checkbox" id="sorties-inscrit">
            <label for="sorties-inscrit">Sorties auxquelles je ne suis pas inscrit/e</label>

            <input type="checkbox" id="sorties-passees">
            <label for="sorties-passees">Sorties passées</label>
        </div>

        <div>
            <button type="submit">Rechercher</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('Y-m-d H:i')}}</td>
                <td>{{ sortie.dateLimiteInscription|date('Y-m-d')}}</td>
                <td>{{ sortie.participants|length }} / {{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>{{ sortie in app.user.sortiesInscrit ? "X"}}</td>
                <td>{{ sortie.organisateur.pseudo}}</td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Détails</a>
                    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                    {% if sortie in app.user.sortiesInscrit %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Se désister</a>
                    {% else %}
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}">S'inscrire</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('sortie_delete', {'id': sortie.id}) }}">Annuler</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune sortie n'est prévue. N'hésitez pas à en organiser une !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_new') }}">Organiser une sortie</a>
{% endblock %}
