{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <h1>Campus index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Campus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for i in 0..campuses|length-1 %}
            <tr class="table-{% if i is even %}info{% else %}secondary{% endif %}">
                <td>{{ campuses[i].nom }}</td>
                <td>
                    <a href="{{ path('campus_edit', {'id': campuses[i].id}) }}">Modifier</a>
                    <a href="{{ path('campus_delete', {'id': campuses[i].id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun campus trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('campus_new') }}">Create new</a>
{% endblock %}
