<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ExitDotCom{% endblock %}</title>
    <link rel="icon" href="{{ asset('image/icon.png') }}">
{#          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">#}
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="https://bootswatch.com/5/sketchy/bootstrap.min.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('css/ourcss.css') }}">

</head>
<body class="d-flex flex-column vh-100">
{% if app.user %}
    <header>
        <div class="container">
            {% include 'inc/nav.html.twig' %}
        </div>
    </header>
{% endif %}
<main class="d-flex flex-column justify-content-around">
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>

<footer>
    <div class="container d-flex justify-content-center">
        &copy; WAKA {{ "now" | date("Y") }}
    </div>
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('JS/easterEgg.js') }}"></script>
{% endblock %}

</body>
</html>
