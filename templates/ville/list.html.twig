{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Liste des Villes {% endblock %}

{% block body %}
    <h1>Liste des villes</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>CodePostal</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for i in 0..villes|length %}

            <tr class="hover-pointer table-{% if i is even %}info{% else %}secondary{% endif %}">

                {% if i != villes|length %}

                    <td onclick="document.location.href='{{ path('ville_edit', {'id': villes[i].id}) }}'">
                        {{ villes[i].nom }}
                    </td>
                    <td onclick="document.location.href='{{ path('ville_edit', {'id': villes[i].id}) }}'">
                        {{ villes[i].codePostal }}
                    </td>
                    <td class="ms-auto">
                        {{ include ('ville/_delete_form.html.twig', {'ville' : villes[i]}) }}
                    </td>

                {% else %}

                    {{ form_start(form) }}

                    <td>{{ form_widget(form.nom) }}</td>
                    <td>{{ form_widget(form.codePostal) }}</td>
                    <td>{{ include('inc/buttons.html.twig', {'isForm': true, 'new': true}) }}</td>

                    {{ form_end(form) }}

                {% endif %}

            </tr>

        {% else %}
            <tr>
                <td colspan="4">Aucune ville d√©finie</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
